---
const navLinks = [
//// Definición de los enlaces de navegación
// Esta constante contiene los objetos que representan los enlaces de navegación del sitio.
  { href: "/", text: "Inicio" },
  { href: "/shop", text: "Productos" },
  { href: "/contact", text: "Contáctanos" }
];
---


<header class="w-full bg-white shadow-lg relative">
  
  <!-- Sección de Banner superior -->
  <div class="relative h-[300px] md:h-[400px] overflow-hidden">
    <img
      src="/img/banner.jpg" 
      alt="Banner Principal"
      class="w-full h-full object-cover blur-[2px]"
    />
    <!-- Fondo en degradado oscuro para el banner -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/60"></div>
    <!-- Título y subtítulo centrados en el banner -->
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center space-y-4">
        <h1 class="text-4xl md:text-6xl font-bold text-white tracking-wider drop-shadow-lg">
          Confort Art <!-- Título del sitio -->
        </h1>
        <p class="text-lg md:text-xl text-white/90 font-light tracking-wide">
          Diseño y elegancia para tu hogar <!-- Subtítulo -->
        </p>
      </div>
    </div>
  </div>

  <!-- Sección de Navegación -->
  <div class="absolute top-0 left-0 right-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-24">
        <!-- Logo -->
        <div class="flex-shrink-0 w-32 md:w-40">
          <a href="/" class="block">
            <img 
              src="/img/logo.webp" 
              alt="Confort Art Logo" 
              class="h-16 w-auto transition duration-300 hover:opacity-90 drop-shadow-md"
            />
          </a>
        </div>

        <!-- Navegación en desktop -->
        <nav class="hidden md:flex items-center space-x-10">
          {navLinks.map(link => (
            <a
              href={link.href} 
              class="text-white hover:text-primary-200 font-medium text-lg relative group transition duration-300"
            >
              {link.text}  <!-- Texto del enlace -->
              <!-- Línea de animación en hover -->
              <span class="absolute -bottom-2 left-0 w-0 h-0.5 bg-primary-200 group-hover:w-full transition-all duration-300 ease-out"></span>
            </a>
          ))}
        </nav>

        <!-- Botón de menú móvil -->
        <button
          id="menuButton"
          class="md:hidden flex flex-col justify-between w-8 h-6 transition-all duration-300 z-50"
          aria-label="Toggle Menu" 
        >
          <span class="w-full h-0.5 bg-white rounded-full transition-transform duration-300 shadow-lg"></span>
          <span class="w-full h-0.5 bg-white rounded-full transition-opacity duration-300 shadow-lg"></span>
          <span class="w-full h-0.5 bg-white rounded-full transition-transform duration-300 shadow-lg"></span>
        </button>
      </div>
    </div>
  </div>

  <!-- Menú móvil -->
  <div id="mobileMenu" class="fixed inset-0 bg-white z-40 hidden md:hidden">
    <nav class="min-h-screen flex flex-col items-center justify-center px-4">
      <ul class="space-y-8 text-center">
        {navLinks.map(link => (
          <li class="transform transition duration-300 hover:scale-110">
            <a
              href={link.href}  
              class="text-3xl font-light text-primary-900 hover:text-primary-700 px-6 py-3 rounded-lg transition duration-300 block hover:bg-gray-100"
            >
              {link.text} <!-- Texto del enlace -->
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
s

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .nav-item-animation {
    animation: fadeIn 0.3s ease-out forwards;
  }
</style>

<script src="/src/scripts/components/header/header.js" type="module" defer></script>